# ============================================
# ConectCampo - Environment Variables
# ============================================

# ── Database ──────────────────────────────────
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/conectcampo?schema=public"

# ── Auth ──────────────────────────────────────
JWT_SECRET="change-me-in-production-min-32-chars-long"
JWT_REFRESH_SECRET="change-me-refresh-in-production-min-32"
JWT_EXPIRATION="15m"
JWT_REFRESH_EXPIRATION="7d"
ADMIN_EMAILS="giovannesartor@gmail.com"

# ── API ───────────────────────────────────────
API_PORT=3001
API_PREFIX="/api/v1"
CORS_ORIGIN="http://localhost:3000"

# ── Frontend ──────────────────────────────────
NEXT_PUBLIC_API_URL="http://localhost:3001/api/v1"
NEXT_PUBLIC_APP_NAME="ConectCampo"
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ── Storage (S3-compatible) ───────────────────
AWS_REGION="sa-east-1"
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_S3_BUCKET="conectcampo-docs"

# ── Payments ──────────────────────────────────
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""
STRIPE_PUBLISHABLE_KEY=""
STRIPE_PRICE_PRO=""
STRIPE_PRICE_ENTERPRISE=""

# ── Email ─────────────────────────────────────
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=conectcampodigital@gmail.com
SMTP_PASS=xxxx xxxx xxxx xxxx   # App Password do Google (não a senha normal)
MAIL_FROM=conectcampodigital@gmail.com
FRONTEND_URL=https://conectcampo.digital

# ── Redis (Queue) ─────────────────────────────
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""
REDIS_URL="redis://localhost:6379"

# ── Observability ─────────────────────────────
OTEL_EXPORTER_OTLP_ENDPOINT=""
LOG_LEVEL="debug"

# ── Encryption ────────────────────────────────
ENCRYPTION_KEY="change-me-32-chars-encryption-key!!"
